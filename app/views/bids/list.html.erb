<h1>Listing bids</h1>

<table>
  <tr>
  <% for column in Bid.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for bids in @bids %>
  <tr>
  <% for column in Bid.content_columns %>
    <td><%=h bids.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => bids %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => bids %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => bids }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @bids_pages.current.previous } if @bids_pages.current.previous %>
<%= link_to 'Next page', { :page => @bids_pages.current.next } if @bids_pages.current.next %> 

<br />

<%= link_to 'New bids', :action => 'new' %>
