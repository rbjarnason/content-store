<table width="100%">
    <tr>
        <td>
            <%= error_messages_for 'user' %>
        </td>
    </tr>
    <tr>
        <td>
            <div id="forms">
                <table class="sub-header">
                    <tr>
                        <td>
                            <span class="sub-header-txt"><%=t :Reset_Password_for %> <%=@user.email %></span>
                        </td>
                    </tr>
                </table>
                <% form_for :user do |form| %>
                <table class="sub-box">
                    <tr>
                        <td>
                            <span class="sub-box-txt">
                                <table width="450">
                                    <tr>
                                        <td width="50%" class="password">
                                            <b>
                                                <label for="password">
                                                    <%=t :Password_Min_Characters %>
                                                </label>
                                            </b>
                                        </td>
                                        <td width="50%" align="right">
                                            <%= form.password_field :password %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="50%" class="password">
                                            <b>
                                                <label for="password_confirmation">
                                                    <%=t :Confirm_Password %>
                                                </label>
                                            </b>
                                        </td>
                                        <td width="50%" align="right">
                                            <%= form.password_field :password_confirmation %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                        </td>
                                        <td align="right">
                                            <%= image_localized_submit_tag("button_submit_1.png", :border => 0, :alt => t(:Submit)) -%>
                                        </td>
                                    </tr>
                                </table>
                            </span>
                        </td>
                    </tr>
                </table>
                <% end %>
            </div>
        </td>
    </tr>
</table>
