<h1>Listing helps</h1>

<table>
  <tr>
  <% for column in Help.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for help in @helps %>
  <tr>
  <% for column in Help.content_columns %>
    <td><%=h help.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => help %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => help %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => help }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @help_pages.current.previous } if @help_pages.current.previous %>
<%= link_to 'Next page', { :page => @help_pages.current.next } if @help_pages.current.next %> 

<br />

<%= link_to 'New help', :action => 'new' %>
