<% if @host.brands %>
<b>Brands</b>
<br>
<table cellpadding="5" cellspacing="0">
<% for brand in @host.brands %>
  <tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td><%= brand.name %></td>
    <td class="list-actions">
    <% if @host.brands.count > 0 %>
      <%= link_to 'Destroy', { :action  => 'destroy_host_brand', :brand_id => brand.id, :id => @host},
                               :confirm => "Are you sure?",
                               :post    => true %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>
<% end %>
