<h1>Listing rights</h1>

<table>
  <tr>
  <% for column in Right.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for right in @rights %>
  <tr>
  <% for column in Right.content_columns %>
    <td><%=h right.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => right %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => right %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => right }, :confirm => 'Are you sure?', :method => :post%></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @right_pages.current.previous } if @right_pages.current.previous %>
<%= link_to 'Next page', { :page => @right_pages.current.next } if @right_pages.current.next %> 

<br />

