<h1>Listing brand categories</h1>

<table>
  <tr>
  <% for column in BrandCategory.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for brand_category in @brand_categories %>
  <tr>
  <% for column in BrandCategory.content_columns %>
    <td><%=h brand_category.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => brand_category %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => brand_category %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => brand_category }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @brand_category_pages.current.previous } if @brand_category_pages.current.previous %>
<%= link_to 'Next page', { :page => @brand_category_pages.current.next } if @brand_category_pages.current.next %> 

<br />

<%= link_to 'New category', :action => 'new' %>
