<div id="mobile-login">
  <%= form_tag %>
  Login with your Streamburst Login.
  <table>
        <tr>
        <td><label for="name">E-mail address:</label></td>
        <td><%= text_field_tag :email, params[:email] %></td>
        </tr>
        <tr>
        <td><label for="password">Password:</label></td>
        <td><%= password_field_tag :password, params[:password] %></td>
        </tr>
        <tr>
        <td></td>
        <td><%= image_submit_tag "button_login_1.gif", :border => 0 %></td>
        </tr>
   </table>
</form>
</div>
