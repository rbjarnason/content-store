<h1>Listing downloads</h1>

<table>
  <tr>
    <th>Id</th>
  <% for column in Download.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for download in @downloads %>
  <tr>
    <td><%=download.id%></td>
  <% for column in Download.content_columns %>
    <td><%=h download.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => download %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => download %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => download }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @download_pages.current.previous } if @download_pages.current.previous %>
<%= link_to 'Next page', { :page => @download_pages.current.next } if @download_pages.current.next %> 

<br />

<%= link_to 'New download', :action => 'new' %>
